package Score_4;

import java.awt.*;

public class Bead {

    private Color c;
    private int x;
    private int y;
    private int z;
    
    public int getx(){
    return x;
    }   
    
    
    public int gety(){
    return y;
    }
    
   
    public int getz(){
    return z;
    }
    
  
    
    public bead(int x, int y, int z, Color color){
    this.x=x;
    this.y=y;
    this.z=z;
    this.color=color;
    }
    
    
    public Corlor getColor(){
    return color;
    }

    Bead(String colorName){
        
        colorName=colorName.toLowerCase();
        
        if(colorName.equals("black")){
            c=Color.BLACK;
        }else{
            
            c=Color.white;
        }

    }


}
